# zsh alias -*- mode: shell-script; coding: euc-jp -*-

#_/_/_/_/_/_/_/_/_/_/_/_/_/_/_/_/_/_/_/_/_/_/_/_/
# alias

  # global alias
  alias -g L='| less'
  alias -g G='| grep'
  alias -g C='| cat'
  alias -g W='| wc'
  alias -g H='| head -n'
  alias -g T='| tail -n'
  alias -g ....='../..'

  # short name
  alias ls='ls -GF'
  alias ll='ls -GFl'
  alias la='ls -AF'
  alias ..='cd ..'
  alias 644='chmod 644'
  alias 664='chmod 664'
  alias 755='chmod 755'
  alias du='du -ackh'
  alias diff='diff -NBaur'
  alias grep='grep -i -e'
  alias gd='dirs -v; echo -n "select number: "; read newdir; cd +"$newdir"'

#_/_/_/_/_/_/_/_/_/_/_/_/_/_/_/_/_/_/_/_/_/_/_/_/
# misc command

  # cd with ls
  function cd() {
      if [ "$1" ]; then builtin cd "$1" && ls ; else builtin cd ; fi
  }

  # goto Trash
  function rm() {
      if [ -d ~/.Trash ]; then
	  for i in $@; do
	      if [ -e $i ]; then
		  mv $i ~/.Trash/
	      else
		  echo "$i : not found"
	      fi
	  done
      else
	  /bin/rm $@
      fi
  }

