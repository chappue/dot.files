# zshrc.darwin -*- Mode: shell-script; coding: euc-jp; -*-

#_/_/_/_/_/_/_/_/_/_/_/_/_/_/_/_/_/_/_/_/_/_/_/_/
# path

  PATH="$PATH:/Applications:/Developer/Tools:/Users/chappue/Binaries/bin"

#_/_/_/_/_/_/_/_/_/_/_/_/_/_/_/_/_/_/_/_/_/_/_/_/
# fundamental

  # editor
  export EDITOR="/usr/local/bin/emacs -nw"
  export SVN_EDITOR=$EDITOR

  # lang
  export LANG="ja_JP.UTF-8"

#_/_/_/_/_/_/_/_/_/_/_/_/_/_/_/_/_/_/_/_/_/_/_/_/
# alias

  # GNU screen with UTF-8
  alias scr='screen -U'

  # CORUNDUM term
  alias jerm-corundum='/Users/chappue/Source/jerm-8095/jerm -b 57600 -pn -d8 -s1 -fn /dev/cu.I-O\ DATA\ USB-RSAQ3'

  # if2a
  alias if2a='sudo ~/Source/if2a-0.94.4/if2a -S 1024Mb -t U'

#_/_/_/_/_/_/_/_/_/_/_/_/_/_/_/_/_/_/_/_/_/_/_/_/
# external option

  # devkitARM
  export DEVKITARM="/opt/local/devkitpro/devkitARM"
  export DEVKITPRO="/opt/local/devkitpro"
