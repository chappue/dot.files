
# Share history file
setopt append_history

# use extended_history
setopt extended_history

# some command not add ".zsh-history"
setopt hist_ignore_dups
setopt hist_ignore_all_dups

# delete surplus space
setopt hist_reduce_blanks
# not add 'history' command to zsh-history
setopt hist_no_store

# Display complement list
setopt auto_list
setopt auto_menu
setopt list_types

# complement parenthesis
setopt auto_param_keys

# complement directorys if argument is '--prefix=/usr'
setopt magic_equal_subst

# if directory complement '/'
setopt auto_param_slash
setopt mark_dirs

# spell check
setopt CORRECT
setopt CORRECT_ALL

# {a-c} -> {a b c}
setopt brace_ccl

# BSD compatible 'echo'
setopt bsd_echo

# symlink 
setopt chase_links

# use 8bit
setopt print_eightbit

# not logout with Ctrl-d
setopt ignore_eof

# globing
setopt extended_glob
# extend alias befor command completion
setopt complete_aliases

# saved 'cd' history
setopt AUTO_PUSHD
setopt PUSHD_IGNORE_DUPS

# Not BEEP
setopt no_beep

# display filelist packed
setopt list_packed
